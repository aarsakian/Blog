
/* Main stylesheet */

html {}
body,header {margin:0px;padding:0px;color:#465c4b;font-size:0.9em;color:#627462;}
form label {display: block;}
/*body{background:url('../images/bg.png');}*/
body{font-family:'Helvetica Neue', Helvetica, Arial, sans-serif;background:#ebf6f5;}
/* Your customizations here */
a{color: #333333;
font-family: Georgia, Serif;text-decoration:none;}
#hd{background-color:#697e6e;
}
#bd{width:80%;
padding-left:10%;
padding-right:10%;
text_align:left;
}
#bdinner{min-height:300px;border:1px solid #d0d0d0;margin:50px 0px;
-moz-border-radius: 3px;
	-webkit-border-radius: 3px;
        overflow:hidden;
	border-radius: 3px;}
#bdinner2{padding:10px;background:#fff;min-height:700px;overflow:hidden;


}
#leftinner{
overflow:hidden;
-moz-border-radius: 3px;
	-webkit-border-radius: 3px;
	border-radius: 3px;}

#left,#right{float:left;overflow:hidden;}
#right{width:24%;left:64%;padding-top:100px;}
#left{width:74%;margin-right:2%;}

.tweets a{ opacity:0.9;
filter:alpha(opacity=90);
color:#333!important;

 }
.rss{float:right;padding-top:20px;}
.tweets.fixed {margin-top: 20px;
  position: fixed;width:19%;
  top: 0%;
}
.tweet{padding-bottom:10px;background:#fafafa;
 border-right:2px solid #d2d9d5;}
.countdown{float:right;}
.backlink{text-align:right;font-weight:bold;}
.backlink img{padding-right:5px;}
 #posts  iframe,#posts span.gplus div{position:relative!important;float:left!important;    top: 0px!important;
    left:0px!important;

    
   }
#posts span.gplus iframe{  left:-40px!important;}

#socialinks{margin:5px 0px 35px 0px;}
h1,h2,h3,.postTitle a{color:#627462;text-align:center;

}
h2,h3{font-size:2.5em;text-shadow:2px 2px    #fff;}
h3{font-size:1.3em;padding:0px;text-shadow:none;color:#627462;
}
#posts,#newpost{text-align:center;}
 #posts .post{/*background:#f7f7f7;*/
 color:#465c4b;padding:3px;font-size:0.9m;
 border-radius:4px 4px 0px 0px;margin-bottom:10px;
 -webkit-border-radius:4px 4px 0px 0px;

 border-bottom:2px solid #d2d9d5;background:#fafafa;}

#posts li{border:3px dotted #d1dcd3;color:#465c4b;}

#hdinner,#ft{background:url('../images/hdGaussiantexture.png');border-bottom:1px solid #e0e0e0;
border-top:1px solid #e0e0e0;}
#hdinner{height:60px;}

#menu{padding:12px 0px 15px 50px;}

#ft p{font-size:1em;text-shadow:1px 1px #ffffff;color:#627462;padding:3px;}
.article{  font-family: Verdana;
  line-height: 1.3em;
  text-shadow:1px 1px #fff;
  text-align:left;
  margin:15px 0px 15px 0px;
}
.post .destroy,.post .edit-tags{display:none;}
.post:hover .destroy,.post:hover .edit-tags{display:block;}
#newpost textarea,#newpost input,.post textarea,.post input{border:none;box-shadow: inset 1px 1px 3px 0px #a0a0a0;
color:rgba(75,75,75,0.7);
margin:10px auto 20px auto;width:100%;}
textarea{min-height:60px;}
#newpost input,.post input{width:70%;padding:3px;display:block;}

.title:hover {opacity:0.7;
filter:alpha(opacity=70);}

