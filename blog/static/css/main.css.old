	-moz-box-shadow: 0 0 4px 2px rgba(0,0,0,.3) inset;
	-webkit-box-shadow: 0 0 4px 2px rgba(0,0,0,.3) inset;
	box-shadow: 0 0 4px 2px rgba(0,0,0,.3) inset;
	position: relative;
	top: 1px;
}
.clear{clear:both;}
#date,#updated{margin:10px 0px 10px 0px;text-align:right;font-style:italic;font-size:0.8em;}
.links{height:40px;}
