#nav, #nav ul,#left ul {
	padding: 0;
	margin: 0;
	list-style: none;
        width:10em;
}

ul li#navsub:hover a,ul li#navsub a:hover{background:none;box-shadow:none; color:#efefef;
text-shadow:rgba(0, 0, 0, 0.296875) 0 -1px 0;}

#nav a {
	display: block;
     
}

#nav li li a,#nav li li:hover a{padding:4px 2px 4px 2px;color:#f0f0f0;text-shadow:-1px -1px #505050;font-weight:normal;font-size:1.1em;width:92%;
margin:0px;height:25px;}
#nav li {
	float: left;

}
#nav li li a:hover{background-image: -webkit-gradient(linear, left top, left bottom, from(#eee), to(#627f6f));
	background-image: -webkit-linear-gradient(top, #FFF, #FFDD99);
	background-image: -moz-linear-gradient(top, #FFF, #FFDD99);
	background-image: -ms-linear-gradient(top,  #FFF, #FFDD99);
	background-image: -o-linear-gradient(top,  #FFF, #FFDD99);
	background-image: linear-gradient(top, #FFF, #FFDD99);
	filter: progid:DXImageTransform.Microsoft.gradient(startColorStr='#fafafa', EndColorStr='#dddddd');
        color:#7a7a7a;
        text-shadow:-1px -1px #fff;}
#nav li li {   margin:5px;width:100%;}
.column-1,.column-2,.column-3{float:left;width:33%;height:100%;margin:0px;}
#nav li ul {
	position: absolute;
        top:62px;
	width: 30em;
	left: -999em;
         -moz-border-radius:0px 0px 3px 3px;
         	-webkit-border-radius: 0px 0px 3px 3px;
    padding-bottom:15px;
    box-shadow: 3px 3px 3px 2px #909090;
    border-radius: 0px 0px 3px 3px;
}

#nav li:hover ul {
	left: auto;
        background:#688775;
     
        z-index:1;
         
}

#nav li:hover ul, #nav li.sfhover ul {
	left: auto;
}